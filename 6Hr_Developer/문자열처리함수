# -*- coding: utf-8 -*-
# UTF-8 encoding when using korean

python = "Python is Amazing"

print(python.lower())
print(python.upper())
print(python[0].isupper())
print(len(python))
print(python.replace("Python", "Java"))

index = python.index("n")
print(index)
index = python.index("n", index + 1) # 앞에서 지정된 index 에서 1을 더한 위치에서부터 시작
print(index)

print(python.find("n")) # 원하는 문자의 위치를 알려준다, 없는 문자의 경우 -1 출력
print(python.index("Java")) # 오류 출력

print(python.count("n")) # n이 총 몇번 등장하는지 알려줌
